programa exercicio2;
variaveis
    nome, dataNascimento, email, curso,matricula, disciplina: texto;
inicio
    escreva("----------------Digite suas informações----------------\n");
    escreva("\nNome: ");
    leia(nome);
    escreva("\nData de nascimento: ");
    leia(dataNascimento);
    escreva("\nEmail: ");
    leia(email);
    escreva("\nCurso: ");
    leia(curso);
    escreva("\nMatrícula: ");
    leia(matricula);
    escreva("\nDisciplina: ");
    leia(disciplina);
    escreva("\n\n");
    escreva("-----------Informações do aluno-------------------------\n");
    escreva("Nome: ", nome, "\n");
    escreva("Data de nascimento: ", dataNascimento, "\n");
    escreva("E-mail: ", email, "\n", "\n");
    escreva("Curso: ", curso, "\n");
    escreva("Matricula: ", matricula, "\n");
    escreva("Disciplina: ", disciplina, "\n");
    escreva("--------------------------------------------------------");
    escreva("\n\n");
fim;
