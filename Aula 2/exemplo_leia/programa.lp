programa exemplo_leia;
variaveis
    dia, mes, ano: inteiro;
inicio
    escreva("Digite a sua data de nascimento: \n");
    escreva("Dia: ");
    leia(dia);
    escreva("Mês: ");
    leia(mes);
    escreva("Ano: ");
    leia(ano);
    escreva("\nVocê nasceu em ", dia, "/", mes, "/", ano, ".\n");
    /*comentário*/
fim;
